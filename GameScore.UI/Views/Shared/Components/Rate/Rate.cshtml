@model int;

@{
	Layout = "_ViewComponentLayout";
}

<div id="gameId" style="visibility: hidden; display: none">@Model</div>

@if (User.Identity.IsAuthenticated)
{
	<div class="col-md-6">
		<div class="col-xs-12 col-md-6 rate-container">
			<span class="fas fa-camera rate-icon"></span>
			<select id="graphicsSelect" class="form-control">
				<option value="10">Awesome</option>
				<option value="9">Excellent</option>
				<option value="8">Very Good</option>
				<option value="7">Good</option>
				<option value="6">Interesting</option>
				<option value="5">Meh</option>
				<option value="4">Not Good</option>
				<option value="3">Bad</option>
				<option value="2">Very Bad</option>
				<option value="1">Horrible</option>
			</select>
		</div>
		<div class="col-xs-12 col-md-6 rate-container">
			<span class="fas fa-gamepad rate-icon"></span>
			<select id="gameplaySelect" class="form-control">
				<option value="10">Awesome</option>
				<option value="9">Excellent</option>
				<option value="8">Very Good</option>
				<option value="7">Good</option>
				<option value="6">Interesting</option>
				<option value="5">Meh</option>
				<option value="4">Not Good</option>
				<option value="3">Bad</option>
				<option value="2">Very Bad</option>
				<option value="1">Horrible</option>
			</select>
		</div>
		<div class="col-xs-12 col-md-6 rate-container">
			<span class="fas fa-headphones rate-icon"></span>
			<select id="soundSelect" class="form-control">
				<option value="10">Awesome</option>
				<option value="9">Excellent</option>
				<option value="8">Very Good</option>
				<option value="7">Good</option>
				<option value="6">Interesting</option>
				<option value="5">Meh</option>
				<option value="4">Not Good</option>
				<option value="3">Bad</option>
				<option value="2">Very Bad</option>
				<option value="1">Horrible</option>
			</select>
		</div>
		<div class="col-xs-12 col-md-6 rate-container">
			<span class="fas fa-book rate-icon"></span>
			<select id="narrativeSelect" class="form-control">
				<option value="10">Awesome</option>
				<option value="9">Excellent</option>
				<option value="8">Very Good</option>
				<option value="7">Good</option>
				<option value="6">Interesting</option>
				<option value="5">Meh</option>
				<option value="4">Not Good</option>
				<option value="3">Bad</option>
				<option value="2">Very Bad</option>
				<option value="1">Horrible</option>
			</select>
		</div>
		<div class="col-xs-12 col-md-12 submit-rate">
			<button id="submitRating" type="button" class="btn btn-success">Submit Rating!</button>
		</div>
	</div>
}