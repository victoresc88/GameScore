@model GameScore.UI.ViewModels.ScoreViewModel;

@{
	Layout = "_ViewComponentLayout";
}

<div class="text-center text-white">
	<h1>@Model.Total</h1>

	<stars-component score="@Model.Total"></stars-component>

	<div class="user-rates">
		<span class="fas fa-users"></span>
		<span>@Model.NumberOfRates</span>
	</div>
</div>
<div class="text-white">
	<div class="row">
		<div class="col-xs-2 col-md-1">
			<span title="Graphics" class="fas fa-camera"></span>
		</div>
		<div class="col-xs-12 col-md-10 progress-container">
			<div class="progress progress-striped">
				<div class="progress-bar-striped @Model.GraphicsProgress" role="progressbar" aria-valuenow="20"
						aria-valuemin="0" aria-valuemax="100" style="width: @(Model.Graphics * 10)%">
					@Model.Graphics
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2 col-md-1">
			<span title="Gameplay" class="fas fa-gamepad"></span>
		</div>
		<div class="col-xs-12 col-md-10 progress-container">
			<div class="progress progress-striped">
				<div class="progress-bar-striped @Model.GameplayProgress" role="progressbar" aria-valuenow="20"
						aria-valuemin="0" aria-valuemax="100" style="width: @(Model.Gameplay * 10)%">
					@Model.Gameplay
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2 col-md-1">
			<span title="Sound" class="fas fa-headphones"></span>
		</div>
		<div class="col-xs-12 col-md-10 progress-container">
			<div class="progress progress-striped">
				<div class="progress-bar-striped @Model.SoundProgress" role="progressbar" aria-valuenow="20"
						aria-valuemin="0" aria-valuemax="100" style="width: @(Model.Sound * 10)%">
					@Model.Sound
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2 col-md-1">
			<span title="Narrative" class="fas fa-book"></span>
		</div>
		<div class="col-xs-12 col-md-10 progress-container">
			<div class="progress progress-striped">
				<div class="progress-bar-striped @Model.NarrativeProgress" role="progressbar" aria-valuenow="20"
						aria-valuemin="0" aria-valuemax="100" style="width: @(Model.Narrative * 10)%">
					@Model.Narrative
				</div>
			</div>
		</div>
	</div>
</div>
