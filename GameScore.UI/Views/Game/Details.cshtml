@model GameScore.UI.ViewModels.GameDetailsViewModel

@{ 
	Layout = "_Layout";
}

<div class="col-xs-12 col-md-12 ">
	<h1>@Model.Name (@Model.ReleaseDate)</h1>
	<img class="card-img-top" src="@Model.ImageUrl" alt="Card image cap">

	<div class="row score-components-container">
		<div id="scoreContainer" class="col-xs-12 col-md-6">
			@await Component.InvokeAsync("Score", new { id = Model.Id })
		</div>
		<div id="rateContainer" class="col-xs-12 col-md-6">
			@await Component.InvokeAsync("Rate", new { id = Model.Id })
		</div>
	</div>
</div>